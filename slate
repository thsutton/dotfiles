config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Throw Bindings
bind 1:ctrl         throw 0 resize
bind 2:ctrl         throw 1 resize
bind 3:ctrl         throw 2 resize

# Push Bindings
bind right:ctrl;cmd  push right bar-resize:screenSizeX/2
bind left:ctrl;cmd   push left  bar-resize:screenSizeX/2
bind up:ctrl;cmd     push up    bar-resize:screenSizeY/2
bind down:ctrl;cmd   push down  bar-resize:screenSizeY/2
bind -:ctrl;cmd      corner top-left resize:screenSizeX/2;screenSizeY/2
bind =:ctrl;cmd      corner top-right resize:screenSizeX/2;screenSizeY/2
bind [:ctrl;cmd      corner bottom-left resize:screenSizeX/2;screenSizeY/2
bind ]:ctrl;cmd      corner bottom-right resize:screenSizeX/2;screenSizeY/2

bind ;:ctrl;cmd      push   left         bar-resize:screenSizeX*0.6
bind ':ctrl;cmd      corner top-right    resize:screenSizeX*0.4;screenSizeY*0.6
bind ,:ctrl;cmd      corner bottom-right resize:screenSizeX*0.4;screenSizeY*0.4

